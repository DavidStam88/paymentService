<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://www.han.nl/schemas/types"
        xmlns:tns="http://www.han.nl/schemas/types"
        elementFormDefault="qualified">

    <complexType name="PaymentOutput">
        <all>
            <element name="redirectURL" type="string"/>
            <element name="paymentId" type="long"/>
        </all>
    </complexType>

    <complexType name="PaymentInput">
        <all>
			<element name="operation" type="tns:PaymentOperation" minOccurs="1" maxOccurs="1"/>
			<element name="userId" type="int" minOccurs="1" maxOccurs="1"/>
			<element name="amount" type="int" minOccurs="1" maxOccurs="1"/>
        </all>
    </complexType>

    <simpleType name="PaymentOperation">
        <restriction base="NCName">
            <enumeration value="makePayment"/>
        </restriction>
    </simpleType>
</schema>
